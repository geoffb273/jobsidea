		#signup > button {
			border-radius: 1vmin;
			border: none; 
			margin: 0.25vh;
			font-size: max(16px, 4vh);
			border: 0.5px solid;
		}
		#signup > div > label {
			border-radius: 1vmin;
			font-size: max(16px, 3vh);
			border: 0px;
		}
		
		#signup > div > select {
			border-radius: 1vmin;
			font-size: max(12px, 2.5vh);
			border: 0px;
		}
		#signup > div {
			margin-bottom: 2.5vh;
		}
	}



