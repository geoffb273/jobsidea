<div id="top">
	<a id="logo" href='/'>Staffer</a>
	<div id="dropdown">
		<input id="search" placeholder="Search" onkeyup="searchChange()"></input>
		<div id="results"></div>
	</div>
	<div id="space"></div>
	<button onclick="location.href='/'" class="fa-solid fa-home fa-sm"></button>
	<button onclick="location.href='/notifications'" class="fa-solid fa-bell fa-sm"></button>
	<button onclick="location.href='/chats'" class="fa-solid fa-envelope fa-sm"></button>
	<button onclick="location.href='/profile'" class="fa-solid fa-user fa-sm"></button>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
	var searchChange = function() {
		var searchEl = document.getElementById("search")
		var resultsEl = document.getElementById("results")
		var searchResults = []
		resultsEl.innerHTML = ""
		var search = searchEl.value;
		if (search && search.length > 0) {
			$.get("/search-users/" + search, function(data) {
				for (var i = 0; i < data.length; i++) {
					var u = data[i]
					if (searchResults.find((res) => {res.username == u.username}) == undefined) {
						searchResults.push(u)
					}
				}
				
				
				for (var i = 0; i < searchResults.length; i++) {
					var user = searchResults[i]
					var div = document.createElement("div")
					div.username = user.username
					
					div.onclick = (e) => {
						var username = e.target.username? e.target.username: e.target.attributes.username.value
						window.location.href = "/profile/" + username
					}
					if (user.pic.length > 0) {
						var img = document.createElement("img")
						img.src = user.pic
						img.username = user.username
						img.style.width = '25px'
						img.style.height = '25px'
						img.style.borderRadius = '25px'
						div.appendChild(img)
					} else {
						var span = document.createElement("div")
						span.innerHTML = "<i username='" + user.username + "' class='fa-solid fa-user fa-2xl'></i>"
						span.username = user.username
						span.style.height = '20px'
						span.style.marginTop = '15px'
						span.style.marginBottom = '-10px'
						div.appendChild(span)
					}
					var text = document.createElement('p')
					text.username = user.username
					text.innerHTML = user.username
					text.style.marginLeft = '5px'
					text.style.marginBottom = '0'
					div.appendChild(text)
					div.className = "dropdown-btn"
					resultsEl.appendChild(div)
					resultsEl.style.display = "block"
				}
				
			})
		} else {
			resultsEl.style.display = "none"
		}
		
	}
	
</script>