<style>	/* #20537A #38698E #5481A4 #81A8C6 #B6D0E4 */

	:root {
		--light-background: #f0f0f0;
		--light-secondary: #f8f8f8;
		--dark-background: #333333;
		--dark-secondary: #191919;
		--light-text: #eeeeee;
		--dark-text: #404040;
		--light-border: #c8c8c8;
		--dark-border: #4c4c4c;
	}
	body {
		text-align: center;
		font-family: Roboto;
		justify-content: center;
		background: var(--light-background);
		padding: 0;
		margin: 0;
	}
	
	#title {
		font-size: max(5.5vw, 48px);
		font-family: Roboto;
		color: var(--dark-text);
	}
	#title-div {
		width: 100%;
		background: var(--light-secondary);
		max-height: 100px;
		
		border-bottom: 2px solid var(--light-border);
	}
	
	#container {
		margin: auto;
		margin-top: 10vh;
		padding: 0.25rem;
		width: 700px;
		
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		background: var(--light-secondary);
		border-radius: 2vmin;
		border: 1px solid var(--light-border);
		
		
	}
	
	#login {
		box-sizing: border-box; 
		backdrop-filter: blur(10px); 
		height: max(30vh, 200px);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	
	#login > input {
		border-radius: 1vmin;
		width: 375px;
		font-size: 36px;
		padding-left: 5px;
		background: var(--light-background);
		color: var(--dark-text);
		border: 1px solid var(--light-border);
		padding-left: 10px;
	}
	
	#login > #top {
		margin-top: max(4vh, 20px);
	}
	
	#login > button {
		padding-left: 10px;
		padding-right: 10px;
		border-radius: 5px;
		margin: 0.5vmin;
		font-size: max(2.5vw, 32px);
		border: 1px solid var(--dark-border);
		background: var(--dark-background);
		color: var(--light-text);
	}
	
	#login > button:hover {
		background: var(--dark-text);
	}
	
	#signup {
		display: flex;
	}
	
	#signup > form > button {
		border-radius: 5px;
		margin: 0.5vmin;
		font-size: 28px;
		width: 200px;
		border: 1px solid var(--dark-border);
		background: var(--dark-background);
		color: var(--light-text);
	}
	
	#signup > form > button:hover {
		background: var(--dark-text);
	}
	
	@media only screen and (max-width: 700px) {
		#container {
			width: 95vw;
		}
		#login > input {
			width: 50vw;
			font-size: 28px;
		}
		#login > button {
			font-size: 24px;
		}
		#signup > form > button {
			font-size: 20px;
			width: 150px;
		}
		#container {
			height: 300px;
		}
	}
	
	@media (prefers-color-scheme: dark) {
		#title-div {
			background: var(--dark-secondary);
		}
		#title {
			color: var(--light-text);
		}
		#container {
			background: var(--dark-secondary);
		}
		body {
			background: var(--dark-background);
		}
		
		#login > input {
			background: var(--dark-background);
			color: var(--light-text);
		}
	}

</style>
<meta name="viewport" content="width=device-width,initial-scale=0.8">
<title>Log In / Staffer</title>
<div id="title-div">
	<p id="title">Staffer</p>
</div>
<div id="container">
	<form id="login" action="/handle-login" method="post">
		<input id="top" name='username' placeholder="Username" required><br>
		<input name='password' type="password" placeholder="Password" required><br>
		<button id="login-button" type="submit">Log in</button>
	</form>
	<div id="signup">
		<form id="signup-user" action="/signup-user" method="get">
			<button type="submit">Sign Up as User</button>
		</form>
		<form id="signup-restaurant" action="/signup-restaurant" method="get">
			<button type="submit">Sign Up as Restaurant</button>
		</form>
	</div>
</div>

<script src="/socket.io/socket.io.js"></script>

<script>
	
	var socket = io()
	socket.emit('logged out', {});
	
</script>

